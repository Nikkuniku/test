        data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
      }]
    });

    $(".highcharts-container")
    });

    //リサイズ処理
    $(function () {
        $(window).resize(function () {
            var h = $(window).width();
            console.log(h);

            var p = $(".highcharts-container").width();
            console.log("グラフエリアの長さ"+p); 

            $('#container').highcharts().setSize(
                $(window).width() * 0.5
                , $(window).height() * 0.6
                , true
            )
        });
    });

    
    
</script>
